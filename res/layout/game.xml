<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textviewQu"
        android:layout_width="fill_parent"
        android:layout_height="47dp"
        android:textSize="@dimen/game_qu_text_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonviewAns1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dip" 
        android:textSize="@dimen/desc_size"
        />
    

    <Button
        android:id="@+id/buttonviewAns2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dip"
        android:textSize="@dimen/desc_size"  />

    <Button
        android:id="@+id/buttonviewAns3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dip"
        android:textSize="@dimen/desc_size"   />

    <Button
        android:id="@+id/buttonviewAns4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dip" 
        android:textSize="@dimen/desc_size"   />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

	    <Button
	        android:id="@+id/next"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:text="@string/next"
	        android:textStyle="bold"
	        android:layout_margin="7dip"  />

	</RelativeLayout>
</LinearLayout>