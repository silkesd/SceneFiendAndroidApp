<?xml version="1.0" encoding="utf-8"?>

<!-- the main layout box for the menu screen -->
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bkgrnd"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- THE HEADER AREA (icons and title) -->

    <TextView
        android:id="@+id/CustomFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:shadowColor="@android:color/white"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:text="@string/login_menu"
        android:textColor="@color/title_color"
        android:textSize="@dimen/screen_title_size" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >
  <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.37"
        android:src="@drawable/back_btn"
        android:textStyle="bold" />
        
    </RelativeLayout>
	
	<!-- THE CONTENT AREA - menu items -->   
    <RelativeLayout
        android:id="@+id/RelativeLayout02"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
       
       <!-- the list view contains all items in the login menu list -->

        <ListView
            android:id="@+id/ListView_Login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:listSelector="@drawable/textured" >
</ListView>
    </RelativeLayout>
</LinearLayout>