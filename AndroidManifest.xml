<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.silke.sceneFiendAndroidApp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" 
        	android:maxSdkVersion="15" 
    		android:targetSdkVersion="15"/>

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>  

    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    
    <!-- read network status of the phone -->   
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    
    <!-- allow alteration of network state -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"></uses-permission> 
        
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" 
        android:persistent="true" 
        android:debuggable="true">
        
        <!-- Splash activity is the default activity -->
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" 
            android:description="@string/app_desc">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
		
        <activity android:name="GameActivity"></activity>   
        <activity android:name="SettingsActivity"></activity>
        <activity android:name="ScoresActivity"></activity>
        <activity android:name="HelpActivity"></activity>
        <activity android:name="MenuActivity"></activity>
        <activity android:name="LoginActivity"></activity>
        <activity android:name="RegisterActivity"></activity>
        <activity android:name="SceneFiendLoginActivity"></activity>
        <activity android:name="SpalshActivity"></activity>
        <activity android:name="TwitterLoginActivity"></activity>
        <activity android:name="TwitterRegisterActivity"></activity>
        
    </application>
  
</manifest>