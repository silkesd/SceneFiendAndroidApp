<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.silke.sceneFiendAndroidApp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" 
        	android:maxSdkVersion="15" 
    		android:targetSdkVersion="15"/>

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>  

    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    
    <!-- read network status of the phone -->   
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    
    <!-- allow alteration of network state -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"></uses-permission> 
        
    <application 
        android:icon="@drawable/icon"
        android:label="@string/app_name"  
        android:persistent="true" 
        android:debuggable="true"
        android:screenOrientation="portrait" > 
         
        <!-- Splash activity is the default activity -->
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" 
            android:description="@string/app_desc"
            android:launchMode="singleInstance">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> 
            <intent-filter>
                  <action android:name="android.intent.action.VIEW" />
                  <category android:name="android.intent.category.DEFAULT" />
                  <category android:name="android.intent.category.BROWSABLE" />
                  <data android:scheme="http://www.scenefiend.silkesd.com/" />
          </intent-filter>
        </activity>
		
        <activity android:name="GameActivity"></activity>   
        <activity android:name="PlayVideo"></activity>   
        <activity android:name="GameFinishActivity"></activity>   
        
        <activity android:name="ScoreMenuActivity"></activity>
        <activity android:name="AllScoresActivity"></activity>
        
        <activity android:name="HighScoresActivity"></activity>
        <activity android:name="HelpActivity"></activity>
        <activity android:name="MenuActivity"></activity>
        <activity android:name="LoginActivity"></activity>
        <activity android:name="RegisterActivity"></activity>
        <activity android:name="SceneFiendLoginActivity"></activity>
        <activity android:name="SplashActivity"></activity>
        <activity android:name="TwitterLoginActivity"></activity>
        <activity android:name="TwitterRegisterActivity"></activity>
        <activity android:name="TwitterWebviewActivity"></activity>
    </application>
  
</manifest>